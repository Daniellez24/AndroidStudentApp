<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentsDetailActivity">

    <ImageView
        android:id="@+id/edit_student_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_student_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/edit_student_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintBottom_toTopOf="@+id/edit_student_id_tv"
        app:layout_constraintStart_toStartOf="@+id/edit_student_img"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_img" />

    <TextView
        android:id="@+id/edit_student_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id: "
        app:layout_constraintBottom_toTopOf="@+id/edit_student_phone_tv"
        app:layout_constraintStart_toStartOf="@+id/edit_student_img"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_name_tv" />

    <TextView
        android:id="@+id/edit_student_phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        app:layout_constraintBottom_toTopOf="@+id/edit_student_address_tv"
        app:layout_constraintStart_toStartOf="@+id/edit_student_img"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_id_tv" />

    <TextView
        android:id="@+id/edit_student_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        app:layout_constraintBottom_toTopOf="@+id/student_details_checkbox"
        app:layout_constraintStart_toStartOf="@+id/edit_student_img"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_phone_tv" />

    <CheckBox
        android:id="@+id/student_details_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:text="Checked"
        app:layout_constraintBottom_toTopOf="@+id/edit_student_save_btn"
        app:layout_constraintStart_toStartOf="@+id/edit_student_img"
        app:layout_constraintTop_toBottomOf="@+id/edit_student_address_tv" />

    <Button
        android:id="@+id/edit_student_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>